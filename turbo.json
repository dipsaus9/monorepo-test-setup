{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["^build:packages"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "outputs": ["./dist/**"]
    },
    "@dipsaus9/docs#build": {
      "inputs": ["../../packages/**/*.tsx"],
      "outputs": ["./storybook-static/**"]
    },
    "build:packages": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**"]
    },
    "test": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
