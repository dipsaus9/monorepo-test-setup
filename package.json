{
  "name": "monorepo-test-setup",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm storybook",
    "build": "pnpm -r --filter='./components/*' run build",
    "build:watch": "pnpm -r --filter='./components/*' run build:watch",
    "lint": "pnpm -r --filter='./components/*' run lint",
    "lint:fix": "pnpm -r --filter='./components/*' run lint:fix",
    "test": "pnpm -r --filter='./components/*' run test",
    "storybook": "start-storybook -p 6006 -s public",
    "cy:open": "cypress open --component",
    "cy:run": "cypress run --component",
    "build-storybook": "build-storybook -o docs-build -s public",
    "preview": "vite preview"
  },
  "license": "MIT",
  "workspaces": {
    "packages": [
      "components/*"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-backgrounds": "6.5.13",
    "@storybook/addon-docs": "6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-measure": "6.5.13",
    "@storybook/addon-outline": "6.5.13",
    "@storybook/addons": "6.5.13",
    "@storybook/builder-vite": "0.2.4",
    "@storybook/client-api": "6.5.13",
    "@storybook/client-logger": "6.5.13",
    "@storybook/preview-web": "6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-react": "^1.3.0",
    "@storybook/theming": "^6.5.13",
    "@testing-library/cypress": "^8.0.3",
    "@types/node": "^18.11.5",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "cypress": "^10.10.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "require-from-string": "2.0.2",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "webpack": "5.74.0"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
