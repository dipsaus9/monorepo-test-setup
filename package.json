{
  "name": "monorepo-test-setup",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm storybook",
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:watch": "pnpm -r --filter='./packages/*' run build:watch",
    "lint": "pnpm -r --filter='./packages/*' run lint",
    "lint:fix": "pnpm -r --filter='./packages/*' run lint:fix",
    "test": "pnpm -r --filter='./packages/*' run test",
    "storybook": "start-storybook -p 6006 -s public",
    "cy:open": "cypress open --component",
    "cy:run": "cypress run --component",
    "build-storybook": "build-storybook -o docs-build -s public",
    "preview": "vite preview"
  },
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@testing-library/cypress": "8.0.3",
    "cypress": "10.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.5",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.8"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
